<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    tools:context=".view.fragments.PinAuthFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_circles"
        android:layout_marginBottom="6dp"
        android:contentDescription="@string/cd_app_icon"
        android:src="@color/primary_dark" />
    <!--Icon Layout-->
    <include
        layout="@layout/layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!--Progress bar-->
    <include
        layout="@layout/layout_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_circles"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <!--Pin Circles-->
    <LinearLayout
        android:id="@+id/ll_circles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid_pin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pin_one"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/cd_pin"
            android:src="@drawable/pin_background_normal" />

        <ImageView
            android:id="@+id/iv_pin_two"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/cd_pin"
            android:src="@drawable/pin_background_normal" />

        <ImageView
            android:id="@+id/iv_pin_three"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/cd_pin"
            android:src="@drawable/pin_background_normal" />

        <ImageView
            android:id="@+id/iv_pin_four"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/cd_pin"
            android:src="@drawable/pin_background_normal" />
    </LinearLayout>

    <!--Number Layout-->
    <GridLayout
        android:id="@+id/grid_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <Button
            android:id="@+id/btn_pin_one"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:text="@string/btn_pin_one" />

        <Button
            android:id="@+id/btn_pin_two"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:text="@string/btn_pin_two" />

        <Button
            android:id="@+id/btn_pin_three"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:text="@string/btn_pin_three" />

        <Button
            android:id="@+id/btn_pin_four"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:text="@string/btn_pin_four" />

        <Button
            android:id="@+id/btn_pin_five"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:text="@string/btn_pin_five" />

        <Button
            android:id="@+id/btn_pin_six"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:text="@string/btn_pin_six" />

        <Button
            android:id="@+id/btn_pin_seven"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="@string/btn_pin_seven" />

        <Button
            android:id="@+id/btn_pin_eight"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="@string/btn_pin_eight" />

        <Button
            android:id="@+id/btn_pin_nine"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="@string/btn_pin_nine" />

        <Button
            android:id="@+id/btn_pin_zero"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:text="@string/btn_pin_zero" />

        <ImageButton
            android:id="@+id/btn_pin_backspace"
            style="@style/Auth.ButtonBorderLess"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:contentDescription="@string/cd_pin_backspace"
            app:srcCompat="@drawable/ic_backspace" />

    </GridLayout>

</RelativeLayout>